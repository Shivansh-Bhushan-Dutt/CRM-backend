# Production Environment Variables for CRM Backend
# Copy this to .env on the server and fill in actual values

# Database Configuration
DATABASE_URL="postgresql://crm_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/travel_crm?schema=public"

# Server Configuration
PORT=5002
NODE_ENV=production

# Frontend URL (your domain)
FRONTEND_URL=https://crm.immersivetrips.in

# JWT Configuration (GENERATE A SECURE SECRET!)
# Generate using: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_GENERATED_BY_OPENSSL
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://crm.immersivetrips.in

# Supabase Configuration (if you're using it)
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_key

# Email Configuration (add if you have email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=uploads
